{
  "name": "themeist/build-mode",
  "type": "wordpress-plugin",
  "description": "A lightweight WordPress plugin that lets you set a custom maintenance page with proper 503 headers while allowing administrators full site access.",
  "keywords": ["WordPress", "plugin", "maintenance", "development", "build mode"],
  "homepage": "https://themeist.com/plugins/wordpress/build-mode/",
  "license": "GPL-3.0-or-later",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/phpstan": "^1.11",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "php-stubs/wordpress-stubs": "^6.8",
    "php-stubs/wordpress-tests-stubs": "^6.8",
    "phpstan/extension-installer": "^1.4",
    "phpunit/phpunit": "^9.6"
  },
  "scripts": {
    "lint": "parallel-lint --exclude vendor .",
    "check": "phpcs",
    "fix": "phpcbf",
    "analyze": "php -d memory_limit=2512M vendor/bin/phpstan analyze",
    "package": "git archive --format=zip --output=build-mode.zip HEAD",
    "test": "vendor/bin/phpunit",
    "make-pot": "wp i18n make-pot . languages/build-mode.pot --domain=build-mode --exclude=vendor,node_modules,.git"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
